<p id="notice"><%= notice %></p>

<h1>专业列表</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>编号</th>
      <th>名称</th>
      <th>所属学院</th>
      <th colspan="2">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @majors.each do |major| %>
      <tr>
        <td><%= major.id %></td>
        <td><%= major.name %></td>
        <td><%= major.college.name %></td>
        <td><%= link_to '更新', edit_major_path(major) %></td>
        <td><%= link_to '删除', major, method: :delete, data: { confirm: '确定要删除吗？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

