<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.text_field :gender %>
  </div>
  <div class="field">
    <%= f.label :nation %><br>
    <%= f.text_field :nation %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday, :start_year => 1910, :use_month_numbers => true %>
  </div>
  <div class="field">
    <%= f.label :politcs %><br>
    <%= f.text_field :politcs %>
  </div>
  <div class="field">
    <%= f.label :diplomano %><br>
    <%= f.text_field :diplomano %>
  </div>
  <div class="field">
    <%= f.label :college %><br>
    <%= f.select :college, College.all.collect { |p| [ p.name, p.name ] } %>
 
  </div>
  <div class="field">
    <%= f.label :major %><br>
    <%= f.select :major, Major.all.collect { |p| [ p.name, p.name ] } %>
  </div>
  <div class="field">
    <%= f.label :classname %><br>
    <%= f.select :classname, Classs.all.collect { |p| [ p.major.name+p.name, p.name ] } %>
  </div>
  <div class="field">
    <%= f.label :studentno %><br>
    <%= f.text_field :studentno %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :img %><br>
    <%= f.text_field :img %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
